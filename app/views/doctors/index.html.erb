<h1>Doctors#index</h1>
<p>Find me in app/views/doctors/index.html.erb</p>

<%= link_to "[ Create New Doctor ]", new_doctor_path %>
<table>
  <thead>
    <tr>
      <th><h3>Name</h3></th>
      <th colspan= "3"><h3>Action</h3></th>
    </tr>
  </thead>

  <tbody>
  <% @doctors.each do |doctor| %>
    <tr>
        <td><%= doctor.name %></td>
        <td><%= link_to "[ Show ]", doctor_path(doctor) %></td>
        <td><%= link_to "[ Edit ]", edit_doctor_path(doctor) %></td>
        <td><%= link_to "[ Delete ]", doctor_path(doctor), data: { turbo_method: :delete , turbo_confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
